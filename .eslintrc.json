{
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "plugins": [
    "unused-imports"
  ],
  "rules": {
    "camelcase": "off",
    "no-useless-constructor": "off",
    "no-unused-vars": "off", // or "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}